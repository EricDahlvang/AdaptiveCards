{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "0.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "Spacing controls the amount of space between this element and ths one before it",
            "size": "medium",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "spacing: default",
            "spacing": "default"
        },
        {
            "type": "TextBlock",
            "text": "spacing: none",
            "separation": "none"
        },
        {
            "type": "TextBlock",
            "text": "separator: default",
            "separator": {}
        },
           {
            "type": "TextBlock",
            "text": "separator: thick, color: accent",
            "separator": {
                "thickness": "thick",
                "color": "accent"
            }
        }
    ]
}